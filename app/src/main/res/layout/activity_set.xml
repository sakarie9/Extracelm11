<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="extrace.ui.main.SetActivity">

    <!-- 垂直滚动区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/set_et_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="@string/url"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                style="@style/Bar.White.Selectable"
                android:visibility="gone">

                <TextView
                    android:id="@+id/package_first_icon"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码"/>

                <EditText
                    android:id="@+id/user_edit_tv_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorFont"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/package_first_icon"
                    android:background="@null"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/user_package"
                style="@style/Bar.White.Selectable"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/package_first_icon"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"/>

                <EditText
                    android:id="@+id/user_edit_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/package_first_icon"
                    android:background="@null"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                style="@style/Bar.White.Selectable">

                <TextView
                    android:id="@+id/package_first_icon"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="电话"/>

                <EditText
                    android:id="@+id/user_edit_tv_telphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorFont"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/package_first_icon"
                    android:background="@null"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
